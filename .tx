import { useState } from "react";
import { Configuration, OpenAIApi } from "openai";

import "./App.css";

const configuration = new Configuration({
  apiKey: "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",
});

const openai = new OpenAIApi(configuration);

function App() {
  const [message, setMessage] = useState("");
  const [chats, setChats] = useState([]);
  const [isTyping, setIsTyping] = useState(false);
  const [errorMessage, setErrorMessage] = useState("");

  const chat = async (e, message) => {
    e.preventDefault();

    setIsTyping(true);

    setChats([...chats, { role: "user", content: message }]);
    setMessage("");

    try {
      const response = await openai.createChatCompletion({
        model: "gpt-3.5-turbo",
        messages: [
          {
            role: "system",
            content: "You are a RizzGPT. You help with busness plan writting",
          },
          ...chats,
        ],
      });

      const { choices } = response.data;

      if (choices && choices.length > 0) {
        setChats([
          ...chats,
          { role: "assistant", content: choices[0].message.content },
        ]);
      }

      setIsTyping(false);
      setErrorMessage("");
    } catch (error) {
      console.log(error);
      setErrorMessage("An error occurred. Please try again later.");
      setIsTyping(false);
    }
  };

  return (
    <main>
      <h1>React ChatGPT App</h1>

      {isTyping && (
        <div>
          <p>
            <i>Typing</i>
          </p>
        </div>
      )}

      {errorMessage && <p>{errorMessage}</p>}

      <form onSubmit={(e) => chat(e, message)}>
        <input
          type="text"
          name="message"
          value={message}
          placeholder="Type a message"
          onChange={(e) => setMessage(e.target.value)}
        />
      </form>

      <div>
        {chats.map((chat, index) => (
          <div key={index}>
            <p>{chat.role === "user" ? "User: " : "Assistant: "}</p>
            <p>{chat.content}</p>
          </div>
        ))}
      </div>
    </main>
  );
}

export default App;
